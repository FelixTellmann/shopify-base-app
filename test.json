{
  "name": "shopify-development-app",
  "version": "0.4.1",
  "author": "Felix Tellmann",
  "description": "Shopify Boilerplate App based on MERN Stack to fully integrate into the Shopify App store. Going through OAuth, Billing API, Embedded App SDK providing an interface based on Polaris.",
  "scripts": {
  "heroku-postbuild": "yarn build",
    "build": "rimraf build && mkdir build && concurrently \"yarn build:server\" \"yarn build:client\"",
    "build:server": "babel . --ignore node_modules,client,build,webpack.config.js,webpack.development.config.js --out-dir ./build",
    "build:client": "webpack --mode production",
    "clean": "rimraf build && mkdir build",
    "start": "concurrently  \"yarn start:server\" \"yarn start:client\"",
    "start:server": "cross-env NODE_ENV=development nodemon -r dotenv/config -r babel-register server.js",
    "start:client": "webpack-dev-server --config ./webpack.development.config.js --content-base client/ --inline --hot --port 3001",
    "start:local:prod": "cross-env NODE_ENV=production node -r dotenv/config -r ./build/server.js",
    "start:prod": "cross-env NODE_ENV=production node -r dotenv/config -r ./build/server.js",
    "ngrok": "ngrok http 3000"
},
  "engines": {
  "node": "8.11.x",
    "yarn": "1.7.x"
},
  "dependencies": {
  "@shopify/polaris": "^2.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "concurrently": "^3.5.1",
    "cookie": "^0.3.1",
    "cookie-session": "^2.0.0-beta.3",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "dotenv": "^4.0.0",
    "dotenv-webpack": "^1.5.5",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jquery": "^3.3.1",
    "mongoose": "^4.13.6",
    "node-fetch": "^1.7.3",
    "node-sass": "^4.8.3",
    "nodemon": "^1.12.5",
    "nonce": "^1.0.4",
    "passport": "^0.4.0",
    "passport-shopify": "^0.1.2",
    "passport-strategy": "^1.0.0",
    "raw-loader": "^0.5.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-google-maps": "^9.4.5",
    "react-prop-types": "^0.4.0",
    "react-router-dom": "^4.2.2",
    "react-slick": "^0.23.1",
    "read-env": "^1.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "style-it": "^2.0.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-server": "^3.1.3"
},
  "devDependencies": {
  "ngrok": "^3.0.1"
},
  "babel": {
    "presets": [
      "env",
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ]
  }
}
